{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "buildCommand": "cd frontend && npm install && npm run build"
        }
      },
      {
        "src": "backend/api/index.py",
        "use": "@vercel/python"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/api/index.py"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/dist/$1"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  }