{
    "version": 2,
    "framework": "vite",
    "buildCommand": "cd frontend && npm install && npm run build",
    "installCommand": "npm install",
    "outputDirectory": "frontend/dist",
    "builds": [
      {
        "src": "backend/api/index.py",
        "use": "@vercel/python"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/api/index.py"
      },
      {
        "source": "/(.*)",
        "destination": "/$1"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    },
    "regions": ["hkg1"]
  }